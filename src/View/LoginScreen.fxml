<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #344955;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginScreenController">
    <children>
      <Label fx:id="Title" layoutX="172.0" layoutY="14.0" text="Appointment System" textFill="WHITE">
         <font>
            <Font name="SansSerif Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="UsernameField" layoutX="265.0" layoutY="148.0" prefHeight="25.0" prefWidth="167.0" />
      <TextField fx:id="PasswordField" layoutX="265.0" layoutY="199.0" prefHeight="25.0" prefWidth="167.0" />
      <Label fx:id="Error" layoutX="167.0" layoutY="70.0" text="*Username and password did not match" textFill="#fc0000">
         <font>
            <Font size="14.0" />
         </font></Label>
      <Button fx:id="LoginButton" layoutX="386.0" layoutY="244.0" mnemonicParsing="false" onAction="#loginHandler" text="Login" />
      <Label fx:id="Username" alignment="CENTER" layoutX="137.0" layoutY="148.0" prefHeight="25.0" prefWidth="71.0" text="Username" textFill="WHITE">
         <font>
            <Font name="SansSerif Regular" size="13.0" />
         </font>
      </Label>
      <Label fx:id="Password" contentDisplay="CENTER" layoutX="147.0" layoutY="202.0" prefHeight="20.0" prefWidth="71.0" text="Password" textFill="WHITE">
         <font>
            <Font name="SansSerif Regular" size="13.0" />
         </font>
      </Label>
      <Button fx:id="ExitButton" layoutX="506.0" layoutY="347.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="46.0" text="Exit" />
      <Label fx:id="ZoneLabel" layoutX="275.0" layoutY="312.0" text="Location" textFill="WHITE">
         <font>
            <Font name="SansSerif Regular" size="13.0" />
         </font>
      </Label>
   </children>   
</AnchorPane>
